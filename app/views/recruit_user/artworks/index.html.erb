<div class="container-fluid mx-0 p-0 mt-5">
  <div class="row justify-content-center pt-5">
    <div class="col-8">
      <div class="container">
        <% if @artworks.blank? %>
          <div class="row d-flex justify-content-center">
            <h5 class="text-center">まだポートフォリオの投稿はありません</h5>
          </div>
        <% else %>
          <div class="row d-flex justify-content-center">
            <div class="artwork justify-content-center">
              <% @artworks.each do |artwork| %>
                <div class="card mt-2 mx-2" style="width: 18rem; height: 26rem;">
                  <div class="bd-placeholder-img card-img-top">
                    <%= link_to recruit_user_artwork_path(artwork) do %>
                      <%= image_tag artwork.artwork_image, style: "object-fit: cover; width: 100%; height: 350px;" %>
                    <% end %>
                    <div class="card-body row">
                      <p class="card-text">
                        <div class="col-auto">
                          <%= link_to recruit_user_creator_path(artwork.creator) do %>
                            <% if artwork.creator.profile_image.attached? %>
                              <%= image_tag artwork.creator.profile_image, class:"rounded-circle", size: "40x40" %>
                            <% else %>
                              <%= image_tag 'no_image.jpg', class:"rounded-circle", size: "40x40" %>
                            <% end %>
                          <% end %>
                        </div>
                        <div class="col-auto my-auto">
                          <%= link_to recruit_user_creator_path(artwork.creator_id), class: "text-secondary" do %>
                            <%= artwork.creator.nickname %>
                          <% end %>
                        </div>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <div class="row d-flex justify-content-center p-5">
            <%= paginate @artworks %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container p-5"></div>
</div>




