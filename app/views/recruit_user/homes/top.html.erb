<div class="container-fluid">
  <div class="row mt-5 mx-5">
    <div class="col-auto m-0 p-0">
      <p class="h4 pl-2"><strong>新着ポートフォリオ</strong></p>
    </div>
  </div>
  <div class="row mx-5 d-flex justify-content-end">
    <div class="col-auto">
      <%= link_to recruit_user_artworks_path, class: "text-secondary" do %>
        もっと見る<i class="fas fa-chevron-circle-right"></i>
      <% end %>
    </div>
  </div>
  <div class="slider row mt-2 mx-5">
    <% @artworks.each do |artwork| %>
      <div class="card mx-2" style="width: 18rem; height: 26rem;">
        <div class="bd-placeholder-img card-img-top">
          <%= link_to recruit_user_artwork_path(artwork) do %>
              <%= image_tag artwork.artwork_image, style: "object-fit: cover; width: 100%; height: 350px;" %>
          <% end %>
          <div class="card-body row">
            <p class="card-text">
              <div class="col-auto">
                <%= link_to recruit_user_creator_path(artwork.creator) do %>
                  <% if artwork.creator.profile_image.attached? %>
                    <%= image_tag artwork.creator.profile_image, class:"rounded-circle", size: "40x40" %>
                  <% else %>
                   <%= image_tag 'no_image.jpg', class:"rounded-circle", size: "40x40" %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-auto my-auto">
                <%= link_to recruit_user_creator_path(artwork.creator_id), class: "text-secondary" do %>
                  <%= artwork.creator.nickname %>
                <% end %>
              </div>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <div class="container-fluid pt-5">
  <div class="row mt-5 mx-5">
