        <%= link_to recruit_user_creators_path, class: "text-secondary" do %>
          もっと見る<i class="fas fa-chevron-circle-right"></i>
        <% end %>
      </div>
    </div>
    <div class="slider row mt-2 mx-5">
      <% @creators.each do |creator| %>
        <div class="card mx-2" style="width: 18rem; height: 20rem;">

          <div class="card-body">
            <div class="card-title row p-3">
              <div class="col-auto">
                <%= link_to recruit_user_creator_path(creator) do %>
                  <% if creator.profile_image.attached? %>
                    <%= image_tag creator.profile_image, class:"rounded-circle", size: "100x100" %>
                  <% else %>
                   <%= image_tag 'no_image.jpg', class:"rounded-circle", size: "100x100" %>
                  <% end %>
                <% end %>
              </div>
              <h5 class="col-auto my-auto">
                <%= link_to recruit_user_creator_path(creator), class: "text-secondary" do %>
                  <%= creator.nickname %>
                <% end %>
              </h5>
            </div>
            <p class="card-text row p-3 my-3"><%= creator.introduction %></p>
          </div>
        </div>
      <% end %>
    </div>
  <div class="container p-5"></div>
