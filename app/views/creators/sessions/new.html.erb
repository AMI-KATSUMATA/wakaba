<h2>つくりてログイン</h2>

<%= form_with model: @creator, url: creator_session_path, local: true do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <!--　% if devise_mapping.rememberable? %>-->
