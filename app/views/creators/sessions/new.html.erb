  <!--    %= f.check_box :remember_me %>-->
  <!--    %= f.label :remember_me %>-->
  <!--  </div>-->
  <!--　% end %>-->

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

