                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_musician_session_path, method: :delete, class: "nav-link text-light" do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
              </li>
