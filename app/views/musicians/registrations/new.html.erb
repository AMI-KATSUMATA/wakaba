<div class="container-fluid mx-0 p-0">
  <div class="row d-flex justify-content-center">
    <div class="col-auto">
      <h4 class="text-center mt-5"><strong>つのりて新規登録</strong></h4>
    </div>
  </div>
</div>

<div class="container-fluid mt-5 mx-0 p-0">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "musicians/shared/error_messages", resource: resource %>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :氏名, class: "col-5 col-form-label text-right" %>
      <div class="col-7">
  　     <%= f.text_field :last_name, autofocus: true, placeholder: "姓" %>
  　     <%= f.text_field :first_name, autofocus: true, placeholder: "名" %>
  　   </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :フリガナ, class: "col-5 col-form-label text-right" %>
      <div class="col-7">
  　     <%= f.text_field :last_name_kana, autofocus: true, autofocus: true, placeholder: "セイ" %>
  　     <%= f.text_field :first_name_kana, autofocus: true, autofocus: true, placeholder: "メイ" %>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :バンド名, class: "col-5 col-form-label text-right" %>
      <div class="col-7">
  　     <%= f.text_field :nickname, autofocus: true, placeholder: "20字以内で入力してください", :size => "30*30" %>
        <p class="text-danger ml-4 mb-0">*アカウント表示名として使用します</p>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :電話番号, class: "col-5 col-form-label text-right" %>
      <div class="col-7">
    　   <%= f.text_field :phone_number, autofocus: true %>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :メールアドレス, class: "col-5 col-form-label text-right" %>
      <div class="col-7 pl-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :パスワード, class: "col-5 col-form-label text-right" %>
      <div class="col-7 pl-4">
        <%= f.password_field :password, :size => "40*30", autocomplete: "new-password", placeholder: "6〜16文字で入力してください" %>
      </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
      <%= f.label :パスワード確認, class: "col-5 col-form-label text-right" %>
      <div class="col-7 pl-4">
        <%= f.password_field :password_confirmation, :size => "40*30", autocomplete: "new-password", placeholder: "もう一度パスワードを入力してください" %>
      </div>
    </div>

    <div class="actions row d-flex justify-content-center pt-3">
      <%= f.submit "新規登録", class: "btn btn-outline-secondary col-2" %>
    </div>
  <% end %>

  <div class="row d-flex justify-content-center pt-4">
    <%= link_to new_musician_session_path, class:"text-secondary" do %>
      <p><i class="far fa-hand-point-right fa-2x"></i>つのりてでログインする</p>
    <% end %>
  </div>

  <div class="container p-4"></div>

<!--%= render "musicians/shared/links" %>-->
</div>