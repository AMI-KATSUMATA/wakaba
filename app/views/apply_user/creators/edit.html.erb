<div class="container-fluid mt-5 mx-0 p-0">
  <div class=" row d-flex justify-content-center">
    <%= form_with model: @creator, local: true do |f| %>
      <table class="table table-borderless text-secondary p-0">
        <tbody>
          <tr>
            <th><strong><%= f.label :プロフィール画像 %></strong></th>
            <td><%= f.file_field :profile_image %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :氏名 %></strong></th>
            <td class="d-flex">
              <p class="col"><%= f.text_field :last_name, class: "form-control" %></p>
              <p class="col"><%= f.text_field :first_name, class: "form-control" %></p>
            </td>
          </tr>

          <tr>
            <th><strong><%= f.label :フリガナ %></strong></th>
            <td class="d-flex">
              <p class="col"><%= f.text_field :last_name_kana, class: "form-control" %></p>
              <p class="col"><%= f.text_field :first_name_kana, class: "form-control" %></p>
            </td>
          </tr>

          <tr>
            <th><strong><%= f.label :アカウント名 %></strong></th>
            <td><%= f.text_field :nickname, size: "20x30", class: "form-control" %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :電話番号 %></strong></th>
            <td><%= f.text_field :phone_number, class: "form-control" %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :アドレス %></strong></th>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :スケジュール %></strong></th>
            <td><%= f.text_field :schedule, class: "form-control" %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :参考価格 %></strong></th>
            <td><%= f.text_field :price, class: "form-control" %></td>
          </tr>

          <tr>
            <th><strong><%= f.label :紹介文 %></strong></th>
            <td><%= f.text_field :introduction, class: "form-control" %></td>
          </tr>
        </tbody>
      </table>

　    <div class="row d-flex justify-content-center">
        <%= f.submit "変更", class: "btn btn-outline-secondary col-3" %>
      </div>
    <% end %>
  </div>

  <div class="row d-flex justify-content-center pt-4">
　  <%= link_to unsubscribe_creator_path(@creator), class:"text-secondary" do %>
　　　<p><i class="far fa-hand-point-right fa-2x"></i>退会はこちらから</p>
　　<% end %>
  </div>
  <div class="container p-4"></div>
</div>
