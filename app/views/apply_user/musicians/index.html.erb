<div class="container-fluid mx-0 px-0 py-5">
  <div class=" row d-flex justify-content-center">
    <div class="col-6">
      <% @musicians.each do |musician| %>
        <div class="row d-flex justify-content-center">
          <div class="col-auto">
            <%= link_to musician_path(musician) do %>
              <% if musician.profile_image.attached? %>
                <%= image_tag creator.profile_image, class:"rounded-circle", size: "60x60" %>
              <% else %>
                <%= image_tag 'no_image.jpg', class: "rounded-circle", size: "60x60" %>
              <% end %>
            <% end %>
           </div>

          <div class="col-auto my-auto">
            <%= link_to musician_path(musician), class:"text-secondary text-center align-middle" do %>
              <%= musician.nickname %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row d-flex justify-content-center p-4">
        <%= paginate @musicians %>
      </div>
    </div>
  </div>
</div>

